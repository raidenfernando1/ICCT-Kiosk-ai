{
  "name": "arachnid-svelte",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "electron:start": "npx electron electron/main.js",
    "electron:build": "electron-builder",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "@types/electron": "^1.4.38",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.20.2",
    "svelte-check": "^4.1.4",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1",
    "@xenova/transformers": "^2.17.2",
    "supabase": "^2.19.7",
    "svelte-spa-router": "^4.0.1"
  },
  "build": {
    "appId": "com.yourapp.id",
    "productName": "ArachnidSvelte",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-web/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
